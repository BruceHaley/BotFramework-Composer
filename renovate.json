{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePaths": [
    "docker-compose.yml",
    "Dockerfile",
    ".github/**",
    "Composer/packages/**",
    "extensions/**"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "minor, patch, pin, digest dependencies"
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": "major dependencies"
    }
  ]
}
