{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "ignorePaths": [
    "docker-compose.yml",
    "Dockerfile",
    ".github/**",
    "Composer/packages/**",
    "extensions/**"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "patch and minor updates"
    },
    {
      "matchUpdateTypes": ["major", "pin"],
      "groupName": "major and pin updates"
    }
  ]
}
